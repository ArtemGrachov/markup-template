{
  "name": "markup-template",
  "version": "1.0.0",
  "description": "Boilerplate for creating HTML templates",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf ./dist",
    "folders": "mkdir ./dist",
    "build:templates": "pug ./templates/pages --out ./dist",
    "build:styles": "postcss styles/**/[^_]*.scss --dir ./dist/styles --ext css",
    "build:scripts": "./node_modules/.bin/babel scripts --out-dir dist/scripts",
    "watch:templates": "npm run build:templates -- --watch",
    "watch:styles": "npm run build:styles -- --watch",
    "watch:scripts": "npm run build:scripts -- --watch",
    "init": "npm run clean && npm run folders",
    "build": "npm run init && run-p build:*",
    "watch": "npm run init && run-p watch:*"
  },
  "keywords": [
    "html",
    "css",
    "js",
    "markup",
    "template",
    "front-end"
  ],
  "author": "Artem Grachov",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@csstools/postcss-sass": "^5.1.1",
    "autoprefixer": "^10.4.18",
    "babel-preset-minify": "^0.5.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.71.1"
  }
}
