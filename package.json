{
  "name": "markup-template",
  "version": "1.0.0",
  "description": "Boilerplate for creating HTML templates",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf ./dist",
    "folders": "mkdir ./dist",
    "build:templates": "pug ./templates/pages --out ./dist",
    "build:styles": "sass styles:dist/styles",
    "build:scripts": "cp -r scripts dist/scripts",
    "watch:templates": "pug --watch ./templates/pages --out ./dist",
    "watch:styles": "sass styles:dist/styles --watch",
    "init": "npm run clean && npm run folders",
    "build": "npm run init && run-p build:*",
    "watch": "npm run init && run-p watch:*"
  },
  "keywords": [
    "html",
    "css",
    "js",
    "markup",
    "template",
    "front-end"
  ],
  "author": "Artem Grachov",
  "license": "ISC",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.71.1"
  }
}
